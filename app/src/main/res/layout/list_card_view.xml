<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                                    xmlns:cardview="http://schemas.android.com/apk/res-auto"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_margin="@dimen/layout_margin">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/thumbnail"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/thumnail_height"
            android:layout_alignParentTop="true"
            android:scaleType="fitXY"
            android:src="@drawable/placeholder" />

        <TextView
            android:id="@+id/txtWord"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/thumbnail"
            android:maxLines="3"
            android:padding="8dp"
            android:text="dafdafda"
            android:textColor="@color/textColor"
            android:textSize="@dimen/word_text_size" />
        <TextView
            android:id="@+id/txtMeaning"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="40dp"
            android:textStyle="italic"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/txtWord"
            android:maxLines="3"
            android:padding="8dp"
            android:text="sdcssdcsd cscsdcsdscsdcsd scsdsdcsd sdcsdcsd sdcsdcs"
            android:textColor="@color/textColor"
            android:textSize="@dimen/meaning_text_size" />

    </RelativeLayout>
</android.support.v7.widget.CardView>
